.header
    background-color: #070707
    height: 100px

    &__content
        max-width: 1200px
        min-width: 800px
        margin: 0 auto
        padding: 0 20px
        height: 100%
        display: flex
        align-items: center

    &__logo
        width: 150px

    &__menu
        margin-top: 26px
        margin-left: 40px
        padding: 0
        font-size: 16px
        color: #cdcdcd
        text-transform: uppercase
        letter-spacing: 1px
        flex-grow: 1
        flex-shrink: 0

        li
            list-style-type: none
            display: inline-block
            margin-left: 30px

        a
            color: inherit
            text-decoration: none

            &^[0]__menu-item_active
                color: #fff
                font-weight: bold
                cursor: default
